<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/register"
    tools:context=".Selection">

    <Spinner
        android:layout_marginTop="120dp"
        android:id="@+id/spinnerNA"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@drawable/inputs"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:paddingLeft="10dp"
        />
    <Spinner
        android:layout_marginTop="50dp"
        android:id="@+id/spinnersupport"
        android:layout_below="@id/spinnerNA"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@drawable/inputs"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:paddingLeft="10dp"
        />
    <Button
        android:id="@+id/sel_btn"
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/spinnersupport"
        android:layout_marginTop="150dp"
        android:text="Submit"
        android:textSize="18dp"
        android:textStyle="bold"
        android:background="@drawable/button"
        android:layout_marginLeft="255dp"
        android:layout_marginRight="10dp"
        android:layout_alignLeft="@id/spinnersupport"
        />







</RelativeLayout>